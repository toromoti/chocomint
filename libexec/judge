#!/usr/bin/env bash
# vim: ft=sh

match() {
  # $1 right string
  # $2 stdout_file
  # $3 stderr_file
  if \egrep -q "$(eval echo "$1")" "$2" ||
     \egrep -q "$(eval echo "$1")" "$3"; then
    return 0
  else
    return 1
  fi
}

judge() {
  # $1 left string
  # $2 middle string
  # $3 right string
  # $4 exit status
  # $5 stdout_file
  # $6 stderr_file
  case $2 in
    "=" )
      if eval [ "$1" = "$3" ]; then
        return 0
      else
        return 1
      fi
      ;;
    "!=" )
      if [ "$1" != "$3" ]; then
        return 0
      else
        return 1
      fi
      ;;
    ":" )
      case $1 in
        'status' )
          if [ "$4" = "$3" ]; then
            return 0
          else
            return 1
          fi
          ;;
        'match' )
          if match "$3" "$5" "$6"; then
            return 0
          else
            return 1
          fi
          ;;
      esac
      ;;
    "!:" )
      case $1 in
        'status' )
          if [ "$4" != "$3" ]; then
            return 0
          else
            return 1
          fi
          ;;
        'match' )
          if match "$3" "$5" "$6"; then
            return 1
          else
            return 0
          fi
          ;;
      esac
      ;;
  esac
}

judge "$@"
exit $?
